salt-test-s1:
  host: salt-test-s1.vagrant.test
  user: vagrant
  minion_opts:
    grains:
      machine_class: server
      onduty: True
      basebox_image: genesis-CentOSv5
      #+NB: 'machine_roles' temporarily vacated for testing purposes


salt-test-s2:
  host: salt-test-s2.vagrant.test
  user: root
  minion_opts:
    grains:
      machine_class: server
      onduty: True
      basebox_image: genesis-CentOSv6
      machine_roles: ['salt_minion', 'highstate_capable']

  
